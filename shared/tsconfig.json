{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@BLOGS/shared/*": ["../shared/dist/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
